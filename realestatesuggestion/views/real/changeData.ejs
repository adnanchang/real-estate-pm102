<div class="home-background">
  <div class="filter-black"></div>
  <div class="container">
    <div class="row-changeData">
      <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
        <div id="changeData" class="changeData-card">
          <h3 class="title">Your Information</h3>
          <div id="changeData">
            <div class="alert alert-danger" id="error"></div>
            <div class="alert alert-success" id="success"></div>
            <form class="changeData-form" role="form" action="/updateUser" method="post">
              <table>

                <tr>
                  <td><input type="text" class="form-control" placeholder="First Name" name="firstName"
                             value="<%= user.firstName %>"></td>
                  <td>&#160;&#160;&#160;</td>
                  <td><input type="text" class="form-control" placeholder="Last Name" name="lastName"
                             value="<%= user.lastName %>"></td>
                </tr>
                <tr>
                  <td>
                    <button name="saveChange" class="btn btn-fill btn-danger btn-block">Save Changes</button>
                  </td>
                </tr>
              </table>
            </form>
          </div>
          <div id="changePass">
            <form class="changePass-form" role="form" action="/updatePassword" method="post">
              <table>
                <tr>
                  <td>&#160;&#160;&#160;</td>
                </tr>

                <tr>
                  <td><input type="password" class="form-control" placeholder="Password" name="password"></td>
                  <td>&#160;&#160;&#160;</td>
                  <td><input type="password" class="form-control" placeholder="Retype Password" name="passwordConfirm">
                  </td>
                </tr>
                <tr>
                  <td>
                    <button name="savePass" class="btn btn-fill btn-danger btn-block">Change Password</button>
                  </td>
                </tr>
              </table>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
